@model List<DeVeeraApp.ViewModels.DashboardQuoteModel>
@{
    ViewData["Title"] = "List";
}

<div class="intro-y  py-10 sm:py-20 ">

    <div class="px-5 ">
        <div class="font-medium text-center text-lg">Quote List</div>
        <div class="text-gray-600 text-center mt-2">Below are the list of Quotes</div>

    </div>


    <div class="pt-10 border-t border-gray-200 dark:border-dark-5">

        <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
            <div class="intro-y p-5 col-span-12">
                <div class="intro-y box">

                    <div class="p-5" id="basic-table">
                        <div class="preview">
                            <div class="overflow-x-auto">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">#</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Quote</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Author</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Level</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Dashboard Quote</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Random Quote</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Edit</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int i = 1;
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="border-b dark:border-dark-5">@i</td>
                                                    <td class="border-b dark:border-dark-5">@item.Title</td>
                                                    <td class="border-b dark:border-dark-5">@item.Author</td>
                                                    <td class="border-b dark:border-dark-5">@item.Level</td>
                                                    <td class="border-b dark:border-dark-5">@(item.IsDashboardQuote == true ? "Yes" : "No")</td>
                                                    <td class="border-b dark:border-dark-5">@(item.IsRandom == true ? "Yes" : "No")</td>
                                                    <td class="border-b dark:border-dark-5 text-theme-10"><a asp-controller="DashboardQuote" asp-action="Edit" asp-route-Id="@item.Id"><i data-feather="edit"></i></a></td>
                                                    <td class="border-b dark:border-dark-5 text-theme-24"><a onclick="ShowDeleteConfirmation('PostDeleteDashboardQuote(@item.Id)')"><i data-feather="trash-2"></i></a></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="source-code hidden">
                            <button data-target="#copy-basic-table" class="copy-code btn py-1 px-2 btn-outline-secondary"> <i data-feather="file" class="w-4 h-4 mr-2"></i> Copy example code </button>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>
<script src="~/dist/js/CustomJs/Delete.js"></script>

