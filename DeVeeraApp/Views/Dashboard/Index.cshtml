<!-- Start Blog Area -->
<section class="blog-area pt-100 pb-70">
    <div class="container">
        <div class="section-title">
            <h2>Dive Into Our Sessions</h2>
            <p>Lorem ipsum dolor sit amet consectetur adipiscing elit sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>

        <div class="blog-slides owl-carousel owl-theme">

            @{

                int i = 1;
                @foreach (var item in Model.VideoModelList)
                {

                    <div class="single-blog-item">
                        <div class="blog-image">

                            @{
                                if (item.SelectedImages.Count > 0)
                                {
                                    string imageUrl = item.SelectedImages.Where(i => i.ImageUrl != null).FirstOrDefault().ImageUrl;
                                    if (imageUrl != null)
                                    {
                                        <a asp-controller="Lesson" asp-action="Index" asp-route-id="@item.Id" asp-route-srno="@i"><img src=@imageUrl></a>

                                    }
                                }
                                else
                                {
                                    <a asp-controller="Lesson" asp-action="Index" asp-route-id="@item.Id" asp-route-srno="@i"><img src="~/assets/images/blog/blog-1.jpg" alt="image"></a>

                                }
                            }

                            <div class="tag">13th <span>Jan</span></div>
                        </div>

                        <div class="blog-content">
                           

                            <h3>
                                <a href="blog-details.html">@item.Title</a>
                            </h3>
                            <div class="blog-btn">
                                <a asp-controller="Lesson" asp-action="Index" asp-route-id="@item.Id" asp-route-srno="@i" class="default-btn">Read More <i class="flaticon-plus"></i></a>
                            </div>
                        </div>
                    </div>
                
                    i++;

                }
            }




        </div>
    </div>
</section>
<!-- End Blog Area -->
