<!-- Start Blog Area -->
<section class="blog-area pt-100 pb-70">
    <div class="container">
        <div class="section-title">
            <h2>@T("Dive Into Our Sessions")</h2>
            <p>Lorem ipsum dolor sit amet consectetur adipiscing elit sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>

        <div class="blog-slides owl-carousel owl-theme">
            <div class="row">

                @{

                    int i = 1;
                    @foreach (var item in Model.VideoModelList)
                    {
                        <div class="col-span-6">
                            <div class="single-blog-item">
                                <a asp-controller="Lesson" asp-action="Index" asp-route-id="@item.Id" asp-route-srno="@i">
                                    <div class="blog-image">

                                        @{
                                            if (item.SelectedImages.Count > 0)
                                            {
                                                string imageUrl = item.SelectedImages.Where(i => i.ImageUrl != null).FirstOrDefault().ImageUrl;
                                                if (imageUrl != null)
                                                {
                                                    <span><img class="img-htwtLevels" src=@imageUrl ></span>


                                                }
                                            }
                                            else
                                            {
                                                <span><img src="~/assets/images/blog/blog-1.jpg" alt="image"></span>

                                            }
                                        }

                                        <div class="tag">13th <span>Jan</span></div>
                                    </div>

                                    <div class="blog-content">


                                        <h3>
                                            <span>@item.Title</span>
                                        </h3>
                                        <div class="blog-btn">
                                            <span class="default-btn">@T("Read More") <i class="flaticon-plus"></i></span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        i++;

                    }

                }

            </div>


                    </div>
                </div>
</section>
<!-- End Blog Area -->
