@model DeVeeraApp.ViewModels.VideoModel
@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="UploadVideo" asp-action="Edit" method="post">
    <div class="intro-y  py-10 sm:py-20 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg">Edit Level</div>
            <div class="text-gray-600 text-center mt-2">Please add Level name and description</div>
        </div>


        <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="intro-y box p-5 col-span-12">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                        </div>
                    }
                    <div class="mt-5">
                        <label for="input-wizard-1" class="form-label text-theme-21 star">Title</label>
                        <input id="input-wizard-1" asp-for="@Model.Title" type="text" class="form-control" placeholder="title">
                        <span asp-validation-for="Title" class="text-theme-6 mt-2"></span>
                    </div>
                    <div class="mt-5">
                        <label for="input-wizard-1" class="form-label text-theme-21 star">Quote</label>
                        <input id="input-wizard-1" asp-for="@Model.Quote" type="text" class="form-control" placeholder="quote">
                        <span asp-validation-for="Quote" class="text-theme-6 mt-2"></span>
                    </div>
                    <div class="mt-5">
                        <label for="input-wizard-1" class="form-label text-theme-21 star">Subtitle</label>
                        <input id="input-wizard-1" asp-for="@Model.Subtitle" type="text" class="form-control" placeholder="title">
                        <span asp-validation-for="Subtitle" class="text-theme-6 mt-2"></span>
                    </div>

                    <div class="mt-5">
                        <label class="form-label text-theme-21 star">Video URL</label>
                        <input asp-for="VideoURL" type="text" class="form-control" placeholder="video name" />
                        <span asp-validation-for="VideoURL" class="text-theme-6 mt-2"></span>

                    </div>

