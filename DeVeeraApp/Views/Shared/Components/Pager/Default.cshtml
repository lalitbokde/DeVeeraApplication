@model PagedResultBase
@{
    ViewData["Title"] = "Default";
}
@{

    var startIndex = Math.Max(Model.CurrentPage, 1);
    var finishIndex = Math.Min(Model.CurrentPage, Model.PageCount);
}


@if (Model.PageCount > 1)
{
    <div class="pagination-area">
        <a asp-controller="Diary" asp-action="Create" asp-route-Page="1" class="prev page-numbers"><i class='bx bx-chevrons-left'></i></a>

        @if (Model.CurrentPage != 1)
        {
            <a asp-controller="Diary" asp-action="Create" asp-route-Page="@((Model.CurrentPage-1).ToString())" class="prev page-numbers"><i class='bx bx-chevron-left'></i></a>
        }
        else
        {
            <a class="prev page-numbers"><i class='bx bx-chevron-left'></i></a>
        }


        @for (var i = startIndex; i <= finishIndex; i++)
        {
            @if (i == Model.CurrentPage)
            {
                <a asp-controller="Diary" asp-action="Create" asp-route-Page="@((Model.CurrentPage).ToString())" class="page-numbers current ">@i</a>
            }
            else
            {
                <a asp-controller="Diary" asp-action="Create" asp-route-Page="@i.ToString()" class="page-numbers ">@i</a>
            }
        }

        @if (Model.CurrentPage < Model.PageCount)
        {
            <a asp-controller="Diary" asp-action="Create" asp-route-Page="@((Model.CurrentPage+1).ToString())" class="next page-numbers"><i class='bx bx-chevron-right'></i></a>

        }
        else
        {
            <a asp-controller="Diary" asp-action="Create" asp-route-Page="@((Model.CurrentPage).ToString())" class="next page-numbers"><i class='bx bx-chevron-right'></i></a>

        }


        <a asp-controller="Diary" asp-action="Create" asp-route-Page="@((Model.PageCount).ToString())" class="next page-numbers"><i class='bx bx-chevrons-right'></i></a>

    </div>
}
else
{
    <div class="pagination-area">
        <a class="prev page-numbers"><i class='bx bx-chevrons-left'></i></a>
        <a class="prev page-numbers"><i class='bx bx-chevron-left'></i></a>


        <a class="page-numbers current ">1</a>

        <a class="next page-numbers"><i class='bx bx-chevron-right'></i></a>

        <a class="next page-numbers"><i class='bx bx-chevrons-right'></i></a>
    </div>
}

