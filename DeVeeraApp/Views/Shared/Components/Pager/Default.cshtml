@model PagedResultBase
@{
    ViewData["Title"] = "Default";
}
@{

    var startIndex = Math.Max(Model.CurrentPage, 1);
    var finishIndex = Math.Min(Model.CurrentPage, Model.PageCount);
}


@if (Model.PageCount > 1)
{
    <div class="pagination-area">
        <button type="submit" name="Page" value="1" class="prev page-numbers">
        <i class='bx bx-chevrons-left'></i>
        </button>

        @if (Model.CurrentPage != 1)
        {

            <button type="submit" name="Page" value="@((Model.CurrentPage-1).ToString())" class="prev page-numbers"><i class='bx bx-chevron-left'></i></button>
        }
        else
        {
            <button class="prev page-numbers"><i class='bx bx-chevron-left'></i></button>
        }


        @for (var i = startIndex; i <= finishIndex; i++)
        {
            @if (i == Model.CurrentPage)
            {
                <button type="submit" name="Page" class="page-numbers current ">@i</button>
            }
            else
            {
                <button type="submit" name="Page" value="@i.ToString()" class="page-numbers ">@i</button>
            }
        }

        @if (Model.CurrentPage < Model.PageCount)
        {
            <button type="submit" name="Page" value="@((Model.CurrentPage+1).ToString())" class="next page-numbers"><i class='bx bx-chevron-right'></i></button>

        }
        else
        {
            <button type="submit" name="Page" value="@((Model.CurrentPage).ToString())" class="next page-numbers"><i class='bx bx-chevron-right'></i></button>

        }
         <button type="submit" name="Page" value="@((Model.PageCount).ToString())" class="next page-numbers"><i class='bx bx-chevrons-right'></i></button>

    </div>
}
else
{
    <div class="pagination-area">
        <a class="prev page-numbers"><i class='bx bx-chevrons-left'></i></a>
        <a class="prev page-numbers"><i class='bx bx-chevron-left'></i></a>


        <a class="page-numbers current ">1</a>

        <a class="next page-numbers"><i class='bx bx-chevron-right'></i></a>

        <a class="next page-numbers"><i class='bx bx-chevrons-right'></i></a>
    </div>
}

