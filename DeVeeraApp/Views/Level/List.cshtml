@model List<DeVeeraApp.ViewModels.LevelModel>
@{
    ViewData["Title"] = "List";
}

<div class="intro-y  py-10 sm:py-20 ">

    <div class="px-5 ">
        <div class="font-medium text-center text-lg"> Video List</div>
        <div class="text-gray-600 text-center mt-2">Below are the list of videos for different levels.</div>

    </div>


    <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

        <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
            <div class="intro-y box p-5 col-span-12">
                <div class="intro-y box">

                    <div class="p-5" id="basic-table">
                        <div class="preview">
                            <div class="overflow-x-auto">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Id</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Title</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Quote</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Subtitle</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Video URL</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Edit</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="border-b dark:border-dark-5">@item.Id</td>
                                                <td class="border-b dark:border-dark-5">@item.Title</td>
                                                <td class="border-b dark:border-dark-5">@item.Quote</td>
                                                <td class="border-b dark:border-dark-5">@item.Subtitle</td>
                                                <td class="border-b dark:border-dark-5">@item.VideoURL</td>
                                                <td class="border-b dark:border-dark-5 text-theme-10"><a asp-controller="Level" asp-action="Edit" asp-route-Id="@item.Id"><i data-feather="edit"></i></a></td>
                                                <td class="border-b dark:border-dark-5 text-theme-24"><a onclick="ShowDeleteConfirmation('PostDeleteVideo(@item.Id)')"><i data-feather="trash-2"></i></a></td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="source-code hidden">
                            <button data-target="#copy-basic-table" class="copy-code btn py-1 px-2 btn-outline-secondary"> <i data-feather="file" class="w-4 h-4 mr-2"></i> Copy example code </button>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/dist/js/CustomJs/Delete.js"></script>
