<div class="page-banner-with-full-image" style="background-image:url('@(Model[0].Link_3_bannerImage != null ? Model[0].Link_3_bannerImage: "../../assest/images/page-banner/register.jpg")')">
    <div class="container">
        <div class="page-banner-content-two">
            <h2>@Model[0].Link_3_Title</h2>
            <ul>
                <li>
                    <a  asp-controller="Dashboard" asp-action="Index">Home</a>
                </li>
                <li>@Model[0].Link_3_Title</li>
            </ul>
        </div>
    </div>
</div>

<section class="courses-area ptb-100">
    <div class="container">
        <div class="row">
           
            @if (Model.Count != 0)
            {
                @foreach (var item in Model)
                {
                    <div class="col-lg-6 col-md-6">
                        <div class="single-courses-box">
                            <div class="courses-image">
                                @{var largeImg = (item.Image?.ImageUrl == null || item.Image?.ImageUrl=="") ? "/assets/images/courses/courses-1.jpg" : item.Image.ImageUrl;}
                                <a href="@largeImg">
                                    <img src="@largeImg" alt="_image">
                                </a>                                
                            </div>
                            <div class="courses-content">
                                <div class="course-author d-flex align-items-center">
                                    @{var smallImg = (item.Image?.ImageUrl == null || item.Image?.ImageUrl == "") ? "/assets/images/courses/images-1.jpg" : item.Image.ImageUrl;}
                                    <img src="@smallImg" class="rounded-circle" alt="image">
                                    <span>@item.Author</span>
                                </div>
                                <h3>
                                    <a href="courses-details.html">@item.Title</a>
                                </h3>
                                <p>@Html.Raw(item.Story)</p>
                                <ul class="courses-box-footer d-flex justify-content-between align-items-center">
                                    <li>
                                        @*<i class='bx bxs-book'></i> 8 Weeks Long*@
                                    </li>
                                    <li>
                                        @*<i class=''></i> @item.Author*@
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <h2 class="course-author d-flex align-items-center">
                    There are no stories yet.
                </h2>
            }
        </div>
    </div>
</section>


