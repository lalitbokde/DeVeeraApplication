@model DeVeeraApp.ViewModels.VideoModel

@{
    ViewData["Title"] = "Edit";
}
<form asp-controller="Video" asp-action="Edit" method="post" enctype="multipart/form-data" onsubmit="return GetFileName();">
    <div class="intro-y  py-10 sm:py-20 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg">Edit Video</div>
            <div class="text-gray-600 text-center mt-2">Please edit video</div>
        </div>


        <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="intro-y box p-5 col-span-12">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                        </div>
                    }
                <div class="mt-5">
                    <label class="form-label text-theme-21 star">Name</label>
                    <input asp-for="FileName" hidden />

                    <input asp-for="Name" type="text" class="form-control" placeholder="video name" />
                    <span asp-validation-for="Name" class="text-theme-6 mt-2"></span>

                </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Key))
                    {
                        <div class="mt-3">
                            <div class=" pt-4">
                                <div class="flex flex-wrap px-4">
                                    <div class="w-24 h-24 relative image-fit mb-5 mr-5 cursor-pointer zoom-in">
                                        <img class="rounded-md" alt="Icewall Tailwind HTML Admin Template" src="~/dist/images/Videothumbnail.png">
                                        <a onclick="ShowDeleteConfirmation('DeleteEditPageVideo(@Model.Id)')" title="Remove this video to add new" class="tooltip w-5 h-5 flex items-center justify-center absolute rounded-full text-white bg-theme-24 right-0 top-0 -mr-2 -mt-2"> <i data-feather="x" class="w-4 h-4"></i> </a>
                                    </div>
                                </div>
                                <div class="px-4 pb-4 flex items-center cursor-pointer relative dark:text-gray-500">
                                    <i data-feather="play-circle" class="w-4 h-4 mr-2"></i> <span class="text-theme-1 dark:text-gray-300 mr-1">@Model.Key</span>
                                    <input type="file" class="w-full h-full top-0 left-0 absolute opacity-0">
                                </div>
                            </div>
                        </div>

                    }
                    else
                    {
                        <div class="mt-5">
                            <div class="flex flex-col sm:flex-row items-center  border-gray-200 dark:border-dark-5">
                                <label class="font-label  mr-auto text-theme-21">
                                    Upload File
                                </label>
                            </div>
                            <div id="single-file-upload" class="p-5">
                                <div class="preview">
                                    <div data-single="true" fallback="true" action="/video/Upload" class="dropzone">
                                        <div class="fallback">

                                        </div>
                                        <div class="dz-message" data-dz-message>
                                            <div class="text-lg font-medium">Drop files here or click to upload.</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }



                    <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                        <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                            <div class="intro-y   col-span-6">
                                <a asp-controller="Video" asp-action="List" class="btn btn-primary w-24"> List</a>
                            </div>
                            <div class="intro-y  col-span-6 ml-auto">

                                <button type="submit" class="btn btn-primary w-24">Save</button>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>

    </div>


</form>
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/dist/js/CustomJs/Delete.js"></script>
<script>
    function GetFileName() {
        var filename = $(".dz-filename").text();
        document.getElementById("FileName").value = filename;
    }
</script>