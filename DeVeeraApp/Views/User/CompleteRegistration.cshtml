@model DeVeeraApp.ViewModels.User.CompleteRegistrationModel
@using DeVeeraApp.ViewModels.User

@{
    ViewData["Title"] = "CompleteRegistration";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<style>
    
    .rating input[type='radio']:hover ~ label,
    input[type='radio']:checked ~ label {
        background: none;
        color: #221d48;
    }
</style>
<!-- Start Page Banner Area -->
<div class="page-banner-with-full-image" style="background-image:url('@(string.IsNullOrWhiteSpace(Model.HeaderImageUrl)? "../../assest/images/page-banner/login.jpg" : Model.HeaderImageUrl)')">
    <div class="container">
        <div class="page-banner-content-two">
            <h2>@T("Complete-Registration")</h2>
            <ul>
                <li>
                    <a asp-controller="Dashboard" asp-action="Index">@T("Home")</a>
                </li>
                <li>@T("Complete-Registration")</li>
            </ul>
        </div>
    </div>
</div>
<!-- End Page Banner Area -->
<!-- Start My Account Area -->
<section class="my-account-area ptb-100">
    <div class="container">
        <form asp-controller="User" asp-action="CompleteRegistration" method="post">
            <input type="hidden" asp-for="@Model.UserId" />
            <input type="hidden" asp-for="@Model.LevelNo" />
            <input type="hidden" asp-for="@Model.SrNo" />
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="billing-details">
                        <div class="form-group">
                            <label>@T("Reason To Submit The Form:") @T(Model.Reason)</label>

                        </div>
                    </div>
                </div>
                @*@if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                {
                    <div asp-validation-summary="All" class="text-theme-6 mt-4">
                    </div>
                }*@
            <div class="col-lg-6 col-md-12">
                <div class="register-form">
                    <h2>@T("Family/relationship status")</h2>
                    <div class="form-check">
                        <input type="radio" asp-for="@Model.FamilyOrRelationshipType" class="form-check-input" value="@FamilyOrRelationship.Single">
                        <label class="form-check-label" for="checkme">@T("Single")</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="@Model.FamilyOrRelationshipType" class="form-check-input" value="@FamilyOrRelationship.Married">
                        <label class="form-check-label" for="checkme">@T("Married")</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="@Model.FamilyOrRelationshipType" class="form-check-input" value="@FamilyOrRelationship.Divorced">
                        <label class="form-check-label" for="checkme">@T("Divorced")</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="@Model.FamilyOrRelationshipType" class="form-check-input" value="@FamilyOrRelationship.Separated">
                        <label class="form-check-label" for="checkme">@T("Separated")</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" asp-for="@Model.FamilyOrRelationshipType" class="form-check-input" value="@FamilyOrRelationship.Other">
                        <label class="form-check-label" for="checkme">@T("Other")</label>
                    </div>

                </div>

              
                <span class="text-theme-6 mt-2" style="color:red;"> @T(ViewData.ModelState["FamilyOrRelationshipType"]?.Errors.Count()!=0?ViewData.ModelState["FamilyOrRelationshipType"]?.Errors[0].ErrorMessage :"")</span>

            </div>
            <div class="col-lg-6 col-md-12">
                <div class="register-form">
                    <h2>@T("Education")</h2>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" asp-for="@Model.EducationType" value="@Education.HighSchool">
                        <label class="form-check-label"> @T("High school")</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" asp-for="@Model.EducationType" value="@Education.AssociateDegree">
                        <label class="form-check-label"> @T("Associate degree")</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" asp-for="@Model.EducationType" value="@Education.Bachelor">
                        <label class="form-check-label">@T("Bachelor")</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" asp-for="@Model.EducationType" value="@Education.Master">
                        <label class="form-check-label">@T("Master ")</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" asp-for="@Model.EducationType" value="@Education.Doctorate">
                        <label class="form-check-label">@T("Doctorate")</label>
                    </div>

                </div>
                <span class="text-theme-6 mt-2" style="color:red;"> @T(ViewData.ModelState["EducationType"]?.Errors.Count()!=0?ViewData.ModelState["EducationType"]?.Errors[0].ErrorMessage : "")</span>
            </div>
            </div>
            <div class="row mt-5">
                <div class="col-lg-6 col-md-12">
                    <div class="login-form mb-30">
                        <h2>@T("Gender")</h2>
                        <div class="form-check">
                            <input type="radio" asp-for="@Model.GenderType" class="form-check-input" value="@Gender.Male">
                            <label class="form-check-label" for="checkme">@T("Male")</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="@Model.GenderType" class="form-check-input" value="@Gender.Female">
                            <label class="form-check-label" for="checkme">@T("Female")</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="@Model.GenderType" class="form-check-input" value="@Gender.Other">
                            <label class="form-check-label" for="checkme">@T("Other")</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="@Model.GenderType" class="form-check-input" value="@Gender.DontWantToSay">
                            <label class="form-check-label" for="checkme">@T("Remember me")</label>
                        </div>
                        <span class="text-theme-6 mt-2" style="color:red;"> @T(ViewData.ModelState["GenderType"]?.Errors.Count()!=0?ViewData.ModelState["GenderType"]?.Errors[0].ErrorMessage :"")</span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="login-form mb-30">
                        <h2>@T("Income above or below $80K")</h2>
                        <div class="form-check">
                            <input type="radio" asp-for="@Model.IncomeAboveOrBelow80K" class="form-check-input" value="@Income.IncomeAbove80K">
                            <label class="form-check-label" for="checkme">@T("Above $80K")</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="@Model.IncomeAboveOrBelow80K" class="form-check-input" value="@Income.IncomeBelow80K">
                            <label class="form-check-label" for="checkme">@T("Below $80K")</label>
                        </div>
                    </div>
                    <span class="text-theme-6 mt-2" style="color:red;"> @T(ViewData.ModelState["IncomeAboveOrBelow80K"]?.Errors.Count()!=0?ViewData.ModelState["IncomeAboveOrBelow80K"]?.Errors[0].ErrorMessage : "")</span>
                </div>
            </div>
            <div class="row">

                <div class="col-lg-12 col-md-12">
                    <div class="billing-details">
                        <div class="row">

                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>@T("Occupation")</label>
                                    <input asp-for="@Model.Occupation" type="text" class="form-control" placeholder="@T("Occupation")">  
                                    
                                    <span class="text-theme-6 mt-2" style="color:red;"> @T(ViewData.ModelState["Occupation"]?.Errors.Count()!=0?ViewData.ModelState["Occupation"]?.Errors[0]?.ErrorMessage : "")</span>
                                </div>                               
                              
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label>@T("Age")</label> 
                                    <input asp-for="@Model.Age" type="text" min="1" placeholder="@T("Age")" autocomplete="off" value="" oninput="this.value=this.value.replace(/[^0-9]/g,'');" class="form-control" >
                                    <span class="text-theme-6 mt-2" style="color:red;"> @T(ViewData.ModelState["Age"]?.Errors.Count()!=0?ViewData.ModelState["Age"]?.Errors[0]?.ErrorMessage : "")</span>
                                </div>
                             
                               
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12 col-lg-12">
                        <button class="default-btn" type="submit">@T("Save") <i class="flaticon-pointer"></i></button>
                    </div>
                </div>
            </div>


        </form>
    </div>
</section>
<!-- End My Account Area -->