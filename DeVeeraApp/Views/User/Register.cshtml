@model DeVeeraApp.ViewModels.User.UserModel
@using DeVeeraApp.ViewModels.User
@{
    Layout = null;
}

<html lang="en" class="light">
<!-- BEGIN: Head -->
<head>
    <meta charset="utf-8">
    <link href="dist/images/logo.svg" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Icewall admin is super flexible, powerful, clean & modern responsive tailwind admin template with unlimited possibilities.">
    <meta name="keywords" content="admin template, Icewall Admin Template, dashboard template, flat admin template, responsive admin template, web app">
    <meta name="author" content="LEFT4CODE">
    <title>Dashboard - Icewall - Tailwind HTML Admin Template</title>
    <!-- BEGIN: CSS Assets-->
    <link rel="stylesheet" href="~/dist/css/app.css" />
    <link href="~/dist/css/style.css" rel="stylesheet" />
    <!-- END: CSS Assets-->
</head>
<!-- END: Head -->
<body class="main">

    <!-- BEGIN: Top Bar -->
    <div class="top-bar-boxed border-b border-theme-2 -mt-7 md:-mt-5 -mx-3 sm:-mx-8 px-3 sm:px-8 md:pt-0 mb-12">

    </div>
    <!-- END: Top Bar -->
    <!-- BEGIN: Top Menu -->
    <nav class="top-nav">

    </nav>
    <!-- END: Top Menu -->
    <!-- BEGIN: Content -->
    <form asp-controller="User" asp-action="Register" method="post">
        <input type="hidden" asp-for="UserRoleId" value="1" />
        <div class="wrapper wrapper--top-nav">
            <div class="wrapper-box">
                <!-- BEGIN: Content -->
                <div class="content">

                    <!-- BEGIN: Wizard Layout -->
                    <div class="intro-y  py-10 sm:py-20 ">
                        @*<div class="flex justify-center">
                                <button class="intro-y w-10 h-10 rounded-full btn btn-primary mx-2">1</button>
                                <button class="intro-y w-10 h-10 rounded-full btn bg-gray-200 dark:bg-dark-1 text-gray-600 mx-2">2</button>
                                <button class="intro-y w-10 h-10 rounded-full btn bg-gray-200 dark:bg-dark-1 text-gray-600 mx-2">3</button>
                            </div>*@
                        <div class="px-5 ">
                            <div class="font-medium text-center text-lg">@T("Register Your Account")</div>
                            <div class="text-gray-600 text-center mt-2">@T("Please enter username and password")</div>
                        </div>


                        <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

                            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                                <div class="intro-y col-span-3"></div>
                                <div class="intro-y box p-5 col-span-6">
                                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                                    {
                                        // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
                                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                                            @*<a class="close" data-dismiss="alert">&times;</a>*@
                                        </div>
                                    }
                                    <div class="mt-5">
                                        <label for="input-wizard-1" class="form-label text-theme-21 star">@T("User Name")</label>
                                        <input id="input-wizard-1" asp-for="@Model.Email" type="email" class="form-control" placeholder=@T("example@gmail.com")>
                                        <span asp-validation-for="Email" class="text-theme-6 mt-2"></span>
                                    </div>
                                    <div class="mt-5">
                                        <label for="input-wizard-1" class="form-label text-theme-21 star">@T("Mobile Number")</label>
                                        <input id="input-wizard-1" asp-for="@Model.MobileNumber" type="number" class="form-control" placeholder=@T("your mobile number.")>
                                        <span asp-validation-for="MobileNumber" class="text-theme-6 mt-2"></span>
                                    </div>
                                    <div class="mt-5">
                                        <label for="input-wizard-3" class="form-label text-theme-21 star">@T("Password")</label>
                                        <input id="input-wizard-3" asp-for="@Model.UserPassword.Password" type="password" class="form-control" placeholder=@T("Password")>
                                        <span asp-validation-for="UserPassword.Password" class="text-theme-6 mt-2"></span>
                                    </div>

          

                                    <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                                        <button type="submit" class="btn btn-primary w-24">@T("Save")</button>
                                    </div>
                                </div>
                                <div class="intro-y col-span-3"></div>

                            </div>

                        </div>
                    </div>
                </div>
                <!-- END: Wizard Layout -->
            </div>
            <!-- END: Content -->
        </div>
    </form>

    <!-- END: Content -->
    <!-- BEGIN: JS Assets-->
    @*<script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=[" your-google-map-api"]&libraries=places"></script>*@
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/dist/js/app.js"></script>
    <!-- END: JS Assets-->
</body>
</html>