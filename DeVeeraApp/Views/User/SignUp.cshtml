        .body-bg-clr {
            background-image: linear-gradient(to right,#273350,#35446b, #3e475f) !important
        }
    </style>
</head>

<!-- END: Head -->
<body class="body-bg-clr">
    <div class="container sm:px-10">
        <div class="block xl:grid grid-cols-3 gap-4">
            <!-- BEGIN: Login Info -->
            <div class="hidden xl:flex flex-col min-h-screen">

            </div>
            <!-- END: Login Info -->
            <!-- BEGIN: Login Form -->
            <div class="  h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0 ">

                <div class=" my-auto mx-auto xl:ml-20 bg-white xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
                    <div class="p-8 box">
                        <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center ">
                            DeVeeraApp
                        </h2>

                        <div class="intro-x mt-2 text-gray-500 xl:hidden text-center">A few more clicks to sign in to your account. Manage all your e-commerce accounts in one place</div>
                        <div class="intro-x mt-8">
                            <div>
                                <label>First Name</label>
                                <input type="text" class="input w-full border mt-2" placeholder="First Name">
                            </div>
                            <div>
                                <label>Email</label>
                                <input type="text" class="input w-full border mt-2" placeholder="Email">
                            </div>
                            <div>
                                <label>Password</label>
                                <input type="text" class="input w-full border mt-2" placeholder="Password">
                            </div>
                        </div>
                        <div class="intro-x flex text-gray-700 dark:text-gray-600 text-xs sm:text-sm mt-4">
                            <div class="flex items-center mr-auto">
                                <input type="checkbox" class="input border mr-2" id="remember-me">
                                <label class="cursor-pointer select-none" for="remember-me">Remember me</label>
                            </div>
                            <a href="">Forgot Password?</a>
                        </div>
                        <div class="intro-x mt-5 xl:mt-8 text-center  ">
                            <a asp-controller="Home" asp-action="Index" class="button button--lg w-full   text-white bg-theme-1 xl:mr-3 align-top">Sign-Up</a>

                        </div>
                        <div class="mt-3">

                            <div class="flex flex-col sm:flex-row mt-2">
                                <div class="flex items-center text-gray-700 dark:text-gray-500 mr-2"> <input type="radio" class="input border mr-2" id="horizontal-radio-chris-evans" name="horizontal_radio_button" value="horizontal-radio-chris-evans"> <label class="cursor-pointer select-none" for="horizontal-radio-chris-evans">Chris Evans</label> </div>
                                <div class="flex items-center text-gray-700 dark:text-gray-500 mr-2 mt-2 sm:mt-0"> <input type="radio" class="input border mr-2" id="horizontal-radio-liam-neeson" name="horizontal_radio_button" value="horizontal-radio-liam-neeson"> <label class="cursor-pointer select-none" for="horizontal-radio-liam-neeson">Liam Neeson</label> </div>
                                <div class="flex items-center text-gray-700 dark:text-gray-500 mr-2 mt-2 sm:mt-0"> <input type="radio" class="input border mr-2" id="horizontal-radio-daniel-craig" name="horizontal_radio_button" value="horizontal-radio-daniel-craig"> <label class="cursor-pointer select-none" for="horizontal-radio-daniel-craig">Daniel Craig</label> </div>
                            </div>
                        </div>
                        <!--<div class="intro-x mt-10 xl:mt-24 text-gray-700 dark:text-gray-600 text-center xl:text-left">
                          Don't have an account?

                            <a class="text-theme-1 dark:text-theme-10" href="">Create Account</a>
                        </div>-->
                    </div>
                </div>
            </div>
            <!-- END: Login Form -->
        </div>
    </div>

    <!-- BEGIN: JS Assets-->
    <script src="dist/js/app.js"></script>
    <!-- END: JS Assets-->
</body>
</html>