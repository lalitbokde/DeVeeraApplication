@model DeVeeraApp.ViewModels.User.TwoFactorAuthModel
@{
    ViewData["Title"] = "TwoFactorAuthentication";
}

<form asp-controller="User" asp-action="TwoFactorAuthentication" method="post">
    <div class="content">
       <input type="hidden" asp-for="@Model.LevelId" />
       <input type="hidden" asp-for="@Model.ModuleId" />
       <input type="hidden" asp-for="@Model.UserId" />
        <!-- BEGIN: Wizard Layout -->
        <div class="intro-y  py-10 sm:py-20 ">

            <div class="px-5 ">
                <div class="font-medium text-center text-lg">Two Factor Authentication</div>
                <div class="text-gray-600 text-center mt-2">Please enter one time password sent to your registered mobile number to continue.</div>
            </div>


            <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

                <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                    <div class="intro-y col-span-3"></div>
                    <div class="intro-y box p-5 col-span-6">
                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                        {
                            // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
                            <div asp-validation-summary="All" class="text-theme-6 mt-4">
                                @*<a class="close" data-dismiss="alert">&times;</a>*@
                            </div>
                        }

                        <div class="mt-5">
                            <label for="input-wizard-2" class="form-label text-theme-21 star">
                            Enter OTP </label>
                            <input id="input-wizard-2" asp-for="@Model.OTP" type="number" class="form-control" min="0" placeholder="your otp">
                            <span asp-validation-for="OTP" class="text-theme-6 mt-2"></span>
                        </div>

                        <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                            <button type="submit" class="btn btn-primary w-24">Check</button>
                        </div>
                    </div>
                    <div class="intro-y col-span-3"></div>

                </div>

            </div>
        </div>
    </div>

</form>

