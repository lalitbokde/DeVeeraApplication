    <div class="col-span-12 lg:col-span-8 xxl:col-span-9">

        <div class="tab-content">
            <div id="changePassword" class="tab-pane" role="tabpanel" aria-labelledby="profile-tab">
                <div class="intro-y box lg:mt-5">
                    <div class="flex items-center p-5 border-b border-gray-200 dark:border-dark-5">
                        <h2 class="font-medium text-base mr-auto">
                           Change Password
                        </h2>
                    </div>
                    <div class="p-5">
                        <div class="flex flex-col-reverse xl:flex-row flex-col">
                            <div class="flex-1 mt-6 xl:mt-0">
                                <div class="grid grid-cols-12 gap-x-5">
                                    <div class="col-span-12 xxl:col-span-6">
                                        <div>
                                            <label class="form-label">User Name</label>
                                            <input type="text" class="form-control" placeholder="User Name">
                                        </div>
                                        <div class="mt-3">
                                            <label class="form-label">Gender</label>
                                            <input type="text" class="form-control" placeholder="User Name">
                                        </div>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-primary w-20 mt-3">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="accountInfo" class="tab-pane active" role="tabpanel" aria-labelledby="profile-tab">

                <form asp-controller="User" asp-action="UserProfile" method="post">
                    <!-- BEGIN: Display Information -->
                    <div class="intro-y box lg:mt-5">
                        <div class="flex items-center p-5 border-b border-gray-200 dark:border-dark-5">
                            <h2 class="font-medium text-base mr-auto">
                                Display Information
                            </h2>
                        </div>
                        <div class="p-5">
                            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                            {
                                // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
                                <div asp-validation-summary="All" class="text-theme-6 mt-4">
                                    @*<a class="close" data-dismiss="alert">&times;</a>*@
                                </div>
                            }
                            <div class="flex flex-col-reverse xl:flex-row flex-col">
                                <div class="flex-1 mt-6 xl:mt-0">
                                    <div class="grid grid-cols-12 gap-x-5">
                                        <div class="col-span-12 xxl:col-span-6">
                                            <div>
                                                <label class="form-label">User Name</label>
                                                <input asp-for="Id" hidden />
                                                <input asp-for="Email" type="text" class="form-control" placeholder="User Name">
                                                <span asp-validation-for="Email" class="text-theme-6 mt-2"></span>
                                            </div>
                                            <div class="mt-3">
                                                <label class="form-label">Gender</label>
                                                <select asp-for="@Model.GenderType" asp-items="@Html.GetEnumSelectList<Gender>()" class="tail-select w-full">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-span-12 xxl:col-span-6">
                                            <div class="mt-3 xxl:mt-0">
                                                <label class="form-label">Age</label>
                                                <input asp-for="Age" type="text" class="form-control" placeholder="your age">
                                                <span asp-validation-for="Age" class="text-theme-6 mt-2"></span>

                                            </div>
                                            <div class="mt-3">
                                                <label class="form-label">Education</label>
                                                <select asp-for="@Model.EducationType" asp-items="@Html.GetEnumSelectList<Education>()" class="tail-select w-full">
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-span-12">
                                            <div class="mt-3">
                                                <label class="form-label">Occupation</label>
                                                <input asp-for="Occupation" class="form-control" placeholder="your occupation" />
                                                <span asp-validation-for="Occupation" class="text-theme-6 mt-2"></span>

                                            </div>
                                            <div class="mt-3">
                                                <label class="form-label">Family Or Relationship</label>
                                                <select asp-for="@Model.FamilyOrRelationshipType" asp-items="@Html.GetEnumSelectList<FamilyOrRelationship>()" class="tail-select w-full">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-20 mt-3">Save</button>
                                </div>
