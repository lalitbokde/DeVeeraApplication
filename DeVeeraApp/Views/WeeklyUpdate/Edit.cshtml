@model DeVeeraApp.ViewModels.WeeklyUpdateModel

@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="WeeklyUpdate" asp-action="Edit" method="post">
    <div class="intro-y  py-10 sm:py-20 ">

        @if (Enum.GetName(typeof(Quote), Model.QuoteType) == "Login")
        {
            <input type="hidden" asp-for="@Model.QuoteType" value="@Quote.Login" />
            <div class="px-5 ">
                <div class="font-medium text-center text-lg">Edit Login Video Url</div>
                <div class="text-gray-600 text-center mt-2">Please edit video to show on the weekly quote after user login</div>
            </div>
            <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

                <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                    <div class="intro-y box p-5 col-span-12">
                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                        {
                            <div asp-validation-summary="All" class="text-theme-6 mt-4">
                            </div>
                        }
                       
                        <div class="mt-5">
                            <label for="input-wizard-1" class="form-label text-theme-21 star">Video URL</label>
                            <input asp-for="VideoURL" type="text" class="form-control" placeholder="video name" />
                            <span asp-validation-for="VideoURL" class="text-theme-6 mt-2"></span>
                        </div>
                        <div class="mt-5">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox">
                            <label for="input-wizard-1" class="form-label text-theme-21 ">Active</label>
                            <span asp-validation-for="IsActive" class="text-theme-6 mt-2"></span>

                        </div>
                        <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                            <button type="submit" class="btn btn-primary w-24">Save</button>
                        </div>
                    </div>

                </div>

            </div>

        }
        else
        {
            <input type="hidden" asp-for="@Model.QuoteType" value="@Quote.Registration" />
            <div class="px-5 ">
                <div class="font-medium text-center text-lg">Edit Registration Video Url</div>
                <div class="text-gray-600 text-center mt-2">Please edit video url to show on the weekly video after user Registration</div>
            </div>
            <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

                <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                    <div class="intro-y box p-5 col-span-12">
                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                        {
                            <div asp-validation-summary="All" class="text-theme-6 mt-4">
                            </div>
                        }
                     
                        <div class="mt-5">
                            <label for="input-wizard-1" class="form-label text-theme-21 star">Video URL</label>
                            <input asp-for="VideoURL" type="text" class="form-control" placeholder="video name" />
                            <span asp-validation-for="VideoURL" class="text-theme-6 mt-2"></span>

                        </div>


                        <div class="mt-5">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox">
                            <label for="input-wizard-1" class="form-label text-theme-21 ">Active</label>
                            <span asp-validation-for="IsActive" class="text-theme-6 mt-2"></span>

                        </div>

                        <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                            <button type="submit" class="btn btn-primary w-24">Save</button>
                        </div>
                    </div>

                </div>

            </div>

        }


    </div>

</form>

