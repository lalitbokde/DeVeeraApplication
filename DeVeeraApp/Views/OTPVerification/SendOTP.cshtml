@model DeVeeraApp.ViewModels.User.UserModel



<html lang="zxx">


<body>

    <div class="coming-soon-area">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="coming-soon-content">
                    <h2>
                        @T("Enter Your six digit OTP")
