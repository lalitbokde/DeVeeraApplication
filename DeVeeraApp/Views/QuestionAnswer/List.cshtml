@model DeVeeraApp.ViewModels.QuestionAnswer.QuestionModel
@{
    ViewData["Title"] = "List";
}


@if (Model.QuestionsList.Count != 0)
{
<div class="intro-y  py-10 sm:py-20 ">
    <div class="px-5 ">
        <div class="font-medium text-center text-lg"> Questions List</div>
        <div class="text-gray-600 text-center mt-2">Below are the questions for modules.</div>
    </div>
    
    <div class="px-5 sm:px-20  border-t border-gray-200 dark:border-dark-5">       
            <div class="grid grid-cols-12 mt-6">
                <div class="intro-y col-span-12 text-right">
                    <a asp-controller="QuestionAnswer" asp-action="Create" class="btn btn-primary w-28"><i data-feather="plus" class="mr-2 w-5 h-5"></i>Create</a>
                </div>
            </div>
       
        <div class="grid grid-cols-12 gap-4 gap-y-5 mt-6">
            <div class="intro-y box p-5 col-span-12">
                <div class="intro-y">

                    <div class="p-5" id="basic-table">
                        <div class="preview">
                            <div class="overflow-x-auto">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">#</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Question</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Level</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Module</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Edit</th>
                                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int i = 1;
                                            foreach (var item in Model.QuestionsList)
                                            {
                                                <tr>
                                                    <td class="border-b dark:border-dark-5">@i</td>
                                                    <td class="border-b dark:border-dark-5">@item.Question</td>
                                                    <td class="border-b dark:border-dark-5">@item.Module?.Level?.Title</td>
                                                    <td class="border-b dark:border-dark-5">@item.Module?.Title</td>
                                                    <td class="border-b dark:border-dark-5 text-theme-10">@*<a asp-controller="FeelGoodStory" asp-action="Edit" asp-route-Id="@item.Id">*@<i data-feather="edit"></i>@*</a>*@</td>
                                                    <td class="border-b dark:border-dark-5 text-theme-24">@*<a onclick="ShowDeleteConfirmation('PostDeleteFeelGoodStory(@item.Id)')">*@<i data-feather="trash-2"></i>@*</a>*@</td>
                                                </tr>
                                                i++;
                                            }

                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>
</div>

}
else
{
    <div class="intro-y  py-10 sm:py-20 ">
        <div class="px-5 ">
            <div class="font-medium text-center text-lg">There is no data to show</div>
        </div>
    </div>

}

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/dist/js/CustomJs/Delete.js"></script>


