@model DeVeeraApp.ViewModels.QuestionAnswer.QuestionModel
@{
    ViewData["Title"] = "Create";
}

<form asp-controller="QuestionAnswer" asp-action="Create" method="post">
    <div class="intro-y inbox  py-10 sm:py-20 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg">Create Question</div>
            <div class="text-gray-600 text-center mt-2">Please Add Questions For Modules</div>
        </div>


        <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="intro-y box p-5 col-span-12">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                        </div>
                    }
                    <div class="mt-5">
                        <label for="input-wizard-1" class="form-label text-theme-21 star">Question</label>
                        <input id="input-wizard-1" asp-for="@Model.Question" type="text" class="form-control" placeholder="Question">
                        <span asp-validation-for="Question" class="text-theme-6 mt-2"></span>
                    </div>
                    <div class="mt-5">
                        <label class="form-label text-theme-21 ">Level</label>
                        <select id="levelId" asp-for="LevelId" asp-items="Model.AvailableLevels" onchange="GetModuleByLevelId(0)" type="text" data-search="true" class="select form-control w-full " placeholder="Select Level"></select>
                    </div>
                    <div class="mt-5">
                        <label class="form-label text-theme-21 ">Module</label>
                        <select id="moduleId" asp-for="ModuleId" asp-items="Model.AvailableModules" type="text" data-search="true" class="select form-control w-full" placeholder="Select Module"></select>
                    </div>
                    <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                        <a asp-controller="QuestionAnswer" asp-action="List" class="btn btn-primary mr-2 w-24">List</a>
                        <button type="submit" class="btn btn-primary w-24">Save</button>
                    </div>

                </div>

            </div>

        </div>

    </div>


</form>
<script src="~/dist/js/QuestionAnswer.js"></script>
