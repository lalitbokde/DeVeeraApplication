@model DeVeeraApp.ViewModels.Admin.CreateAdminModel
@using DeVeeraApp.ViewModels.User
@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="Admin" asp-action="Edit" method="post">
    <div class="intro-y  py-10 sm:py-20 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg">@(Model.UserRoleId==2? "Create Admin":"User Information")</div>

        </div>


        <div class="px-5 sm:px-20 pt-5 border-t border-gray-200 dark:border-dark-5">

            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="intro-y col-span-3"></div>
                <div class="intro-y box p-5 col-span-6">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                        </div>
                    }

                    @if (Model.UserRoleId == 2)
                    {
                        <div class="mt-5">
                            <label for="input-wizard-1" class="form-label text-theme-21 star">User Name</label>
                            <input id="input-wizard-1" asp-for="@Model.Email" type="email" class="form-control" placeholder="example@gmail.com">
                            <span asp-validation-for="Email" class="text-theme-6 mt-2"></span>
                        </div>
                        <div class="mt-5">
                            <label for="input-wizard-3" class="form-label text-theme-21 star">Password</label>
                            <input id="input-wizard-3" asp-for="@Model.UserPassword.Password" type="password" class="form-control" placeholder="password">
                            <span asp-validation-for="UserPassword.Password" class="text-theme-6 mt-2"></span>
                        </div>
                        <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                            <button type="submit" class="btn btn-primary w-24">Save</button>
                        </div>
                    }
                    else if (Model.UserRoleId == 1)
                    {
                        <div class="mt-5">
                            <label for="input-wizard-1" class="form-label text-theme-21 star">UserName</label>
                            <input id="input-wizard-1" asp-for="@Model.Email" type="email" class="form-control" placeholder="example@gmail.com" readonly>
                        </div>
                        <div class="mt-5">
                            <label for="input-wizard-3" class="form-label text-theme-21 star">Age</label>
                            <input id="input-wizard-3" asp-for="@Model.Age" type="text" class="form-control" placeholder="Age" readonly>
                        </div>
                        <div class="mt-5">
                            <label for="input-wizard-3" class="form-label text-theme-21 star">Gender Type</label>
                            <input id="input-wizard-3" asp-for="@Model.GenderType"  class="form-control" placeholder="Gender Type" readonly>
                        </div>
                        <div class="mt-5">
                            <label for="input-wizard-3" class="form-label text-theme-21 star">Occupation</label>
                            <input id="input-wizard-3" asp-for="@Model.Occupation"  class="form-control" placeholder="Occupation" readonly>
                        </div>
                    }
                </div>
                <div class="intro-y col-span-3"></div>

            </div>

        </div>
    </div>

</form>

