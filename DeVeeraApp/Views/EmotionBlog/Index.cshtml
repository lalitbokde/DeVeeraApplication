@model DeVeeraApp.ViewModels.Emotions.EmotionModel
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

 <style>
        .swal2-styled.swal2-confirm {
            background-color: #F0B9B2;
        }
    </style>
<!-- Start Page Banner Area -->
<div class="page-banner-area">
    <div class="container-fluid">
        <div class="row align-items-center">
            @{
                var HeaderImage = Model.EmotionHeaderImageUrl == null ? "../../assets/images/page-banner/page-banner-3.jpg" : Model.EmotionHeaderImageUrl;
                var BannerImage = Model.EmotionBannerImageUrl == null ? "../../assets/images/blog/blog-details.jpg" : Model.EmotionBannerImageUrl;
                var ThumbnailImage = Model.EmotionThumbnailImageUrl == null ? "../../assets/images/courses/courses-details-1.jpg" : Model.EmotionThumbnailImageUrl;
                var videoUrl = Model.Video?.VideoUrl;

                <div class="col-lg-6 col-md-6">
                    <div class="page-banner-image">
                        <img src="@HeaderImage" alt="image" width="100%">
                        <div class="image-shape">
                            <img src="~/assets/images/page-banner/shape.png" alt="image">
                        </div>
                    </div>
                </div>


                <div class="col-lg-6 col-md-6">
                    <div class="page-banner-content">
                        <h2>@T(Model.EmotionName)</h2>
                        <ul>
                            <li>
                                <a asp-controller="Dashboard" asp-action="Index">@T("Home")</a>
                            </li>
                            <li>@T(Model.EmotionName)</li>
                        </ul>
                    </div>
                </div>
            }
        </div>

        <div class="page-banner-shape">
            <img src="~/assets/images/page-banner/banner-shape-1.png" alt="image">
        </div>
    </div>
</div>
<!-- End Page Banner Area -->
<!-- Start Blog Details Area -->
<div class="blog-details-area ptb-100">
    <div class="container">
        <div class="blog-details-desc">
            <div class="article-content">
                <div class="title-box">
                    <h2>@T(Model.Title)</h2>
                    <div class="entry-meta">
                        <ul>
                            @*<li><i class="flaticon-calendar"></i> <a href="#">@Model.CreatedOn.ToString("MMMM d, yyyy")</a></li>*@
                            @*<li><i class="flaticon-user"></i> <a href="#">Angela Hopper</a></li>
                            <li><i class="flaticon-chat-bubble"></i> <a href="#">03 Comments</a></li>*@
                        </ul>
                    </div>
                </div>

                <div class="article-image">
                    <img src="@BannerImage" alt="image" width="100%">
                </div>

                <h3>@T(Model.Subtitle)</h3>

                <blockquote class="wp-block-quote">
                    <p>@T(Model.Quote)</p>
                </blockquote>
                <div class="row">
                    <div class="col-lg-8 col-md-12 col-sm-12">
                       @Html.Raw(Model.Description)
                    </div>
                    <div class="col-lg-4 col-md-12 col-sm-12">
                        <div class="courses-details-image mt-4">
                            <img src="@ThumbnailImage" alt="image" width="100%" style="height:300px;">
                            @{
                                if (videoUrl == "" || videoUrl == null)
                                {
                                    <a onclick="showvideopopland('@T("Oops")' ,'@T("Video Not Available!")');"  class="video-btn popup-youtube">
                                        <i class="flaticon-play"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="@videoUrl" class="video-btn popup-youtube">
                                        <i class="flaticon-play"></i>
                                    </a>
                                }
                            }

                        </div>
                        <div id="VideoNotAvailable" class="modal" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog ">
                                <div class="modal-content">
                                    <div class="modal-header">Oops !!! .... <i class="btn-close" onclick="hidepopup();"></i></div>
                                    <!-- BEGIN: Modal Body -->
                                    <div class="modal-body grid grid-cols-12 gap-4 gap-y-3">
                                        <div class="col-span-12 sm:col-span-12">

                                            <div id="single-file-upload" class="p-5">
                                                <div class="preview">
                                                    <div data-single="true" fallback="true">
                                                        <div class="fallback">
                                                            @T("Video Not Available !!!")
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <script src="~/CustomJS/Common.js"></script>
<!-- End Blog Details Area -->
