@model DeVeeraApp.ViewModels.Diaries.DiaryModel
@{
    ViewData["Title"] = "Create";
}

<form asp-controller="Diary" asp-action="Create" method="post">
    <div class="intro-y  py-10 sm:py-20 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg">Create Diary</div>

            @if (!string.IsNullOrEmpty(Model.Module))
            {
                <div class="font-medium text-center text-lg">
                     @Model.Level ->   @Model.Module
                </div>
            }
            else
            {
                <div class="font-medium text-center text-lg">
                     @Model.Level 
                </div>
            }

        </div>


        <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="intro-y box p-5 col-span-12">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                        </div>
                    }
                    <input asp-for="LevelId" hidden />
                    <input asp-for="ModuleId" hidden />

                    <div class="mt-5">
                        <label class="form-label text-theme-21 star">Note</label>
                        <input asp-for="Comment" type="text" class="form-control" placeholder="Diary Note" />
                        <span asp-validation-for="Comment" class="text-theme-6 mt-2"></span>

                    </div>
                    <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                        <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                            <div class="intro-y   col-span-6">
                                <a asp-controller="Diary" asp-action="List" class="btn btn-primary w-24">View all Diary entries</a>
                            </div>
                            <div class="intro-y  col-span-6 ml-auto">

                                <button type="submit" class="btn btn-primary w-24">Save</button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>


</form>
