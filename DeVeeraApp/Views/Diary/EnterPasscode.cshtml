@model DeVeeraApp.ViewModels.Diaries.EnterPasscodeModel
@{
    ViewData["Title"] = "EnterPasscode";
}

<form asp-controller="Diary" asp-action="EnterPasscode" method="post">
    <div class="content">

        <div class="intro-y  py-10 sm:py-20 ">

            <div class="px-5 ">
                <div class="font-medium text-center text-lg">Enter Passcode</div>
                <div class="text-gray-600 text-center mt-2">Please enter Passcode to continue.</div>
            </div>


            <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

                <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                    <div class="intro-y col-span-3"></div>
                    <div class="intro-y box p-5 col-span-6">
                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                        {
                            // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
                            <div asp-validation-summary="All" class="text-theme-6 mt-4">
                                @*<a class="close" data-dismiss="alert">&times;</a>*@
                            </div>
                        }

                        <div class="mt-5">
                            <label for="input-wizard-2" class="form-label text-theme-21 star">
                                Enter Passcode
                            </label>
                            <input id="input-wizard-2" asp-for="Passcode" type="number" class="form-control" min="0" placeholder="Passcode">
                            <span asp-validation-for="Passcode" class="text-theme-6 mt-2"></span>
                        </div>

                        <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                            <button type="submit" class="btn btn-primary w-24">Continue</button>
                        </div>
                    </div>
                    <div class="intro-y col-span-3"></div>

                </div>

            </div>
        </div>
    </div>

</form>


