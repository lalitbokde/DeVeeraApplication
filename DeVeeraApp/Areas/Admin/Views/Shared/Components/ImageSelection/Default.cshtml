@model DeVeeraApp.ViewModels.Images.ImageSelectionModel
@{
    ViewData["Title"] = "Default";
}

<!-- BEGIN: Super Large Modal Content -->
<div id="superlarge-modal-size-preview" class="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <form asp-area="Admin" asp-controller="Image" asp-action="SelectImage"
              data-ajax-failure="return onFailed()" data-ajax-success="onImageSelectionSuccess"
              data-ajax="true" data-ajax-method="POST" autocomplete="off">
            <div class="modal-content">
                <!-- BEGIN: Modal Header -->
                <div class="modal-header">
                    <h2 class="font-medium text-base mr-auto">
                        Image Gallery
                    </h2>
                    <a data-dismiss="modal" href="javascript:;"> <i data-feather="x" class="w-8 h-8 text-gray-500"></i> </a>
                </div>
                <!-- END: Modal Header -->
                <div class="modal-body grid grid-cols-12 gap-4 gap-y-3">
                    <div class="col-span-12 sm:col-span-12">
                        <!-- BEGIN: Directory & Files -->
                        <div class="intro-y grid grid-cols-12 gap-3 sm:gap-6 mt-5 mb-5">
                            <input asp-for="ImageFieldId" hidden />
                            <input asp-for="ImageFieldUrl" hidden />

                            @{ var j = 0;
                                @foreach (var item in Model.ImageSelectionListModel)
                                {
                                    <div class="intro-y col-span-6 sm:col-span-4 md:col-span-3 xxl:col-span-2">
                                        <div class="file box rounded-md px-5 pt-8 pb-2 px-3 sm:px-5 relative zoom-in">
                                            <div>
                                                <img class="w-64 h-40" src="@(item.ImageUrl = string.IsNullOrWhiteSpace(item.ImageUrl)? "/Images/No_Image_Available.jpg" : item.ImageUrl )" data-action="zoom" />
                                            </div>
                                            <div class="mt-4 flex">
                                                <input asp-for="ImageSelectionListModel[j].Id" hidden />
                                                <input asp-for="ImageSelectionListModel[j].Key" hidden />
                                                <input asp-for="ImageSelectionListModel[j].Name" hidden />
                                                <input asp-for="ImageSelectionListModel[j].ImageUrl" hidden />
                                                <input asp-for="ImageSelectionListModel[j].Selected" class="form-check-input border border-gray-500" type="checkbox" onclick="InActiveAllImage()">
                                                <a class="ml-2 font-medium text-center truncate">@item.Key</a>
                                            </div>

                                        </div>
                                    </div>
                                    j++;
                                }
                            }
                        </div>
                        <!-- END: Directory & Files -->
                    </div>
                </div>
                <!-- BEGIN: Modal Footer -->
                <div class="modal-footer text-right">
                    <button type="submit" @*data-dismiss="modal" onclick="DisplaySelectedImages();"*@ class="btn btn-primary w-20">Ok</button>
                </div>
                <!-- END: Modal Footer -->
            </div>
        </form>
    </div>
</div>

<!-- END: Super Large Modal Content -->
