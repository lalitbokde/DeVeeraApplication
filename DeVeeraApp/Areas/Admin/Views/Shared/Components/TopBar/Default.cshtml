
    <!-- BEGIN: Top Bar -->
<div class="top-bar -mx-4 px-4 md:mx-0 md:px-0">
    <!-- BEGIN: Breadcrumb -->
    <div class="-intro-x breadcrumb mr-auto hidden sm:flex">
        <a href="@ViewBag.PageUrl">@ViewBag.Page</a>
        <i data-feather="chevron-right" class="breadcrumb__icon"></i>
        <a href="@ViewBag.ActionUrl" class="breadcrumb--active">@ViewBag.Action</a>
    </div>
    <!-- END: Breadcrumb -->

   

    <!-- BEGIN: Account Menu -->

    <div class="intro-x dropdown w-8 h-8">
        <div class="dropdown-toggle w-8 h-8 rounded-full overflow-hidden shadow-lg image-fit zoom-in" role="button" aria-expanded="false">
            <i class="fas fa-user-alt"style="font-size:27px; color:#ee8383;" ></i>
        </div>
        <div class="dropdown-menu w-56">
            <div class="dropdown-menu__content box dark:bg-dark-6">
                <div class="p-4 border-b border-black border-opacity-5 dark:border-dark-3">
                    <div class="font-medium">@_workContext.CurrentUser.Email</div>
                    <div class="text-xs text-gray-600 mt-0.5 dark:text-gray-600">@_workContext.CurrentUser.UserRole.Name</div>
                </div>
                <div class="p-2">
                    <a asp-controller="User" asp-action="UserProfile" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-gray-200 dark:hover:bg-dark-3 rounded-md"> <i data-feather="user" class="w-4 h-4 mr-2"></i> Profile </a>
                    <a asp-controller="Home" asp-action="UnderDevelopment" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-gray-200 dark:hover:bg-dark-3 rounded-md"> <i data-feather="lock" class="w-4 h-4 mr-2"></i> Language </a>
                    <a asp-controller="Home" asp-action="Help" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-gray-200 dark:hover:bg-dark-3 rounded-md"> <i data-feather="help-circle" class="w-4 h-4 mr-2"></i> Help </a>
                </div>
                <div class="p-2 border-t border-black border-opacity-5 dark:border-dark-3">
                    <a asp-controller="User" asp-action="Logout" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-gray-200 dark:hover:bg-dark-3 rounded-md"> <i data-feather="toggle-right" class="w-4 h-4 mr-2"></i> Logout </a>
                </div>
            </div>
        </div>
    </div>
    <!-- END: Account Menu -->
</div>
<!-- END: Top Bar -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>