@model DeVeeraApp.ViewModels.LocalStringResourceModel

@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="LocalStringResources" asp-action="Edit" method="post">
    <div class="intro-y inbox  py-10 sm:py-20 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg">Edit Local String Resources</div>
            <div class="text-gray-600 text-center mt-2">Please edit resources</div>
        </div>


        <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="intro-y box p-5 col-span-12">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                        </div>
                    }
                    <div class="mt-5">
                        <label class="form-label text-theme-21 star">Resource Name</label>
                        <input asp-for="ResourceName" type="text" class="form-control" placeholder="resource name" />
                        <span asp-validation-for="ResourceName" class="text-theme-6 mt-2"></span>

                    </div>
                    <div class="mt-5">
                        <label class="form-label text-theme-21 star">Resource Value</label>
                        <input asp-for="ResourceValue" type="text" class="form-control" placeholder="resource value" />
                        <span asp-validation-for="ResourceValue" class="text-theme-6 mt-2"></span>

                    </div>
                    <div class="mt-5">
                        <label class="form-label text-theme-21 star">Choose Language</label>

                        <select asp-for="@Model.LanguageId" asp-items="@Model.Language.AvailableLanguages" class="tail-select w-full">
                        </select>
                    </div>

                    <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                        <div class="grid grid-cols-12  gap-y-5 mt-5">
                            <div class="intro-y   col-span-6">
                                <span class="btn btn-outline-secondary relative justify-end rounded-full h-10 w-32">
                                    Back to List
                                    <a asp-controller="LocalStringResources" asp-action="List" class="w-8 h-8 absolute flex justify-center items-center bg-theme-17 dark:bg-theme-26 text-white rounded-full  top-0 bottom-0 my-auto pl-24 mr-padding ">
                                        <i data-feather="arrow-left" class="w-4 h-4"></i>
                                    </a>
                                </span>
                            </div>
                            <div class="intro-y  col-span-6 ml-auto">
                                <button type="submit" class="btn btn-primary w-24">Save</button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>


</form>
