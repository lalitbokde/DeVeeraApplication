@model DeVeeraApp.ViewModels.UserLogin.DiaryPasscodeModel
@{
    ViewData["Title"] = "ChangePasscode";
}
<form asp-controller="User" asp-action="ChangePasscode" method="post">
    <div class="content">
        <!-- BEGIN: Wizard Layout -->
        <div class="intro-y  py-10 sm:py-20 ">
            <div class="px-5 ">
                <div class="font-medium text-center text-lg">Change Diary Passcode</div>
                <div class="text-gray-600 text-center mt-2">Change your diary passcode.</div>
            </div>


            <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

                <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                    <div class="intro-y col-span-2"></div>
                    <div class="intro-y box p-5 lg:col-span-8 xl:col-span-8">
                        @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                        {
                            // Bootstrap 2 = "alert-error", Bootstrap 3 and 4 = "alert-danger"
                            <div asp-validation-summary="All" class="text-theme-6 mt-4">
                                @*<a class="close" data-dismiss="alert">&times;</a>*@
                            </div>
                        }

                        <div class="mt-5">
                            <label for="input-wizard-2" class="form-label text-theme-21 star">
                                Old Passcode
                            </label>
                            <input id="input-wizard-2" asp-for="OldPassword" type="number" class="form-control" min="0" placeholder="Old Passcode">
                            <span asp-validation-for="OldPassword" class="text-theme-6 mt-2"></span>
                        </div>

                        <div class="mt-5">
                            <label for="input-wizard-2" class="form-label text-theme-21 star">
                                Passcode
                            </label>
                            <input id="input-wizard-2" asp-for="Password" type="number" class="form-control" min="0" placeholder="Passcode">
                            <span asp-validation-for="Password" class="text-theme-6 mt-2"></span>
                        </div>
                        <div class="mt-5">
                            <label for="input-wizard-2" class="form-label text-theme-21 star">
                                Confirm Passcode
                            </label>
                            <input id="input-wizard-2" asp-for="ConfirmPassword" type="number" class="form-control" placeholder="Confirm Passcode">
                            <span asp-validation-for="ConfirmPassword" class="text-theme-6 mt-2"></span>
                        </div>

                        <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                            <button type="submit" class="btn btn-primary w-24">Save</button>
                            @*<span class="btn btn-outline-secondary relative justify-start rounded-full w-40 ml-2">
                                Continue to Diary
                                <a asp-controller="Diary" asp-action="Create" class="w-8 h-8 absolute flex justify-center items-center bg-theme-17 dark:bg-theme-26 text-white rounded-full right-0 top-0 bottom-0 my-auto ml-auto mr-0.5"> <i data-feather="arrow-right" class="w-4 h-4"></i> </a>
                            </span>*@
                        </div>
                    </div>
                    <div class="intro-y col-span-2"></div>

                </div>

            </div>
        </div>
    </div>

</form>



