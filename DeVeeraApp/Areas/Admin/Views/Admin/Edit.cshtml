@model DeVeeraApp.ViewModels.Admin.CreateAdminModel
@using DeVeeraApp.ViewModels.User
@{
    ViewData["Title"] = "Edit";
}


<form asp-controller="Admin" asp-action="Edit" method="post" id="Admineditform" onsubmit="ShowLoader('Admineditform');">
    <div class="intro-y  py-10 sm:py-20 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg">Edit Admin</div>

        </div>

        <div class="px-5 sm:px-20 pt-5 border-t border-gray-200 dark:border-dark-5">

            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="intro-y col-span-3"></div>
                <div class="intro-y box p-5 col-span-6">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                        </div>
                    }

                    <div class="mt-5">
                        <label for="input-wizard-1" class="form-label text-theme-21 star">User Name</label>
                        <input id="input-wizard-1" asp-for="@Model.Email" type="email" class="form-control" placeholder="example@gmail.com">
                        <span asp-validation-for="Email" class="text-theme-21 mt-2"></span>
                    </div>
                    <div class="mt-5">
                        <label for="input-wizard-3" class="form-label text-theme-21 star">Password</label>
                        <input id="input-wizard-3" asp-for="@Model.UserPassword.Password" type="password" class="form-control" placeholder="password">
                        <span asp-validation-for="UserPassword.Password" class="text-theme-21 mt-2"></span>
                    </div>
                    <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                        <div class="grid grid-cols-12  gap-y-5 mt-5">
                            <div class="intro-y   col-span-6">
                                @*<a asp-controller="Admin" asp-action="List" asp-route-roleName="@_workContext.CurrentUser.UserRole.Name" class="btn btn-primary w-24">Admin List</a>*@
                                <span class="btn btn-outline-secondary relative justify-end rounded-full h-10 w-32">
                                Back to List
                                    <a class="w-8 h-8 absolute flex justify-center items-center bg-theme-17 dark:bg-theme-26 text-white rounded-full  top-0 bottom-0 my-auto pl-24 mr-padding " asp-controller="Admin" asp-action="List" asp-route-roleName="@_workContext.CurrentUser.UserRole.Name">
                                        <i data-feather="arrow-left" class="w-4 h-4"></i>
                                    </a>
                                </span>
                            </div>
                            <div class="intro-y  col-span-6 ml-auto">
                                <button type="submit" class="btn btn-primary w-24" >Save</button>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="intro-y col-span-3"></div>

            </div>

        </div>
    </div>

</form>


