@model List<DeVeeraApp.ViewModels.VideoModel>
@{
    ViewData["Title"] = "List";
}


@if (Model.Count != 0)
{
    <div class="intro-y  py-5 sm:py-5 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg"> Video List</div>
            <div class="text-gray-600 text-center mt-2">Below are the list of videos.</div>

        </div>


        <div class="px-5 sm:px-20  border-t border-gray-200 dark:border-dark-5">

            <div class="intro-y col-span-12  mt-6">
                <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end ">
                    <div class="grid grid-cols-12 gap-4 gap-y-5 ">
                        <div class="intro-y col-span-12 pr-5 text-right">
                            <a asp-controller="Video" asp-action="Create" class="btn btn-primary w-40"><i data-feather="file-plus" class="mr-2"></i>Add Video</a>

                        </div>


                    </div>
                </div>
            </div>

            <div class="grid grid-cols-12 gap-4 gap-y-5  mt-6">
                <div class="intro-y box p-5 col-span-12">
                    <div class="intro-y ">

                        <div class="p-5" id="basic-table">
                            <div class="preview">
                                <div class="overflow-x-auto">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">#</th>
                                                <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Video</th>
                                                <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">New</th>

                                                <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Play</th>

                                                <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Edit</th>
                                                <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int i = 1;
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td class="border-b dark:border-dark-5">@i</td>

                                                        <td class="border-b dark:border-dark-5">@item.Name</td>
                                                        <td class="border-b dark:border-dark-5">
                                                            <input class="checkbox-custom" type="checkbox" @(item.IsNew == true ? "checked" : "")>
                                                        </td>
                                                        @if (string.IsNullOrWhiteSpace(item.VideoUrl))
                                                        {
                                                           <td class="border-b dark:border-dark-5">No Video</td>

                                                        }
                                                        else
                                                        {
                                                             <td class="border-b dark:border-dark-5"><a target="_blank" asp-controller="Video" asp-action="Play" asp-route-Id="@item.Id"><i data-feather="play"></i></a></td>

                                                        }

                                                        <td class="border-b dark:border-dark-5 text-theme-10"><a asp-controller="Video" asp-action="Edit" asp-route-Id="@item.Id"><i data-feather="edit"></i></a></td>
                                                        <td class="border-b dark:border-dark-5 text-theme-24"><a onclick="ShowDeleteConfirmation('PostDeleteVideo(@item.Id)')"><i data-feather="trash-2"></i></a></td>
                                                    </tr>
                                                    i++;
                                                }

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>

}
else
{
    <div class="intro-y  py-10 sm:py-20 ">
        <div class="px-5 ">
            <div class="font-medium text-center text-lg"> There is no data to show</div>

        </div>
    </div>

}

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/dist/js/CustomJs/Delete.js"></script>
