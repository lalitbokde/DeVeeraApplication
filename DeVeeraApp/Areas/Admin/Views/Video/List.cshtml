@model List<DeVeeraApp.ViewModels.VideoModel>
@{
    ViewData["Title"] = "List";
}


@if (@ViewBag.Video != null)
{
    <div class="intro-y  py-5 sm:py-5 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg"> Video List</div>
            <div class="text-gray-600 text-center mt-2">Below are the list of videos.</div>

        </div>


        <div class="px-5 sm:px-20  border-t border-gray-200 dark:border-dark-5">

            <div class="intro-y col-span-12  mt-6">
                <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end ">
                    <div class="grid grid-cols-12 gap-4 gap-y-5 ">
                        <div class="intro-y col-span-12 pr-5 text-right">
                            <a asp-controller="Video" asp-action="Create" class="btn btn-primary w-40"><i data-feather="file-plus" class="mr-2"></i>Add Video</a>

                        </div>


                    </div>

                </div>

            </div>




        </div>

        <div class="intro-y box p-5 mt-6">
            <div class="overflow-x-auto scrollbar-hidden ">
                <input id="Video" value="@ViewBag.Video" hidden />
                <div id="tabulatorVideo"></div>
            </div>
        </div>
    </div>

}
else
{
    <div class="intro-y  py-10 sm:py-20 ">
        <div class="px-5 ">
            <div class="font-medium text-center text-lg"> There is no data to show</div>

        </div>
    </div>

}

<script src="../../lib/jquery/jquery.min.js"></script>
<script type="text/javascript" src="https://unpkg.com/tabulator-tables/dist/js/tabulator.min.js"></script>
<script src="~/dist/js/CustomJs/Delete.js"></script>
<script src="~/dist/js/Video.js"></script>