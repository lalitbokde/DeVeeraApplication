@model DeVeeraApp.ViewModels.LanguageModel

@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="Language" asp-action="Edit" method="post" id="languageeditform" onsubmit="ShowLoader('languageeditform');">
    <div class="intro-y  py-10 sm:py-20 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg">Add Language</div>
            <div class="text-gray-600 text-center mt-2">Please add language</div>
        </div>


        <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="intro-y box p-5 col-span-12">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                        </div>
                    }
                    <div class="mt-5">
                        <label class="form-label text-theme-21 star">Name</label>

                        <input asp-for="Name" type="text" class="form-control" />
                        <span asp-validation-for="Name" class="text-theme-21 mt-2"></span>

                    </div>
                    <div class="mt-5">
                        <label class="form-label text-theme-21 star">Language Culture</label>

                        <input asp-for="LanguageCulture" type="text" class="form-control" />
                        <span asp-validation-for="LanguageCulture" class="text-theme-21 mt-2"></span>

                    </div>
                    <div class="mt-5">
                        <label class="form-label text-theme-21 ">Unique SeoCode</label>

                        <input asp-for="UniqueSeoCode" type="text" class="form-control" />
                        <span asp-validation-for="UniqueSeoCode" class="text-theme-21 mt-2"></span>

                    </div>
                    <div class="mt-5">
                        <input asp-for="Published" type="checkbox" />
                        <label class="form-label text-theme-21 ">Published</label>


                        <span asp-validation-for="Published" class="text-theme-21 mt-2"></span>

                    </div>
                    <div class="mt-5">
                        <input asp-for="Rtl" type="checkbox" />
                        <label class="form-label text-theme-21 ">Rtl</label>



                        <span asp-validation-for="Rtl" class="text-theme-21 mt-2"></span>

                    </div>
                    <div class="mt-5">
                        <label class="form-label text-theme-21 ">Display Order</label>

                        <input asp-for="DisplayOrder" type="text" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-theme-21 mt-2"></span>

                    </div>

            
                        <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                                <div class="intro-y   col-span-6">
                                    @*<a asp-controller="Language" asp-action="List" class="btn btn-primary w-24"> List</a>*@
                                    <span class="btn btn-outline-secondary relative justify-end rounded-full h-10 w-32">
                                        Back to List
                                        <a class="w-8 h-8 absolute flex justify-center items-center bg-theme-17 dark:bg-theme-26 text-white rounded-full  top-0 bottom-0 my-auto pl-24 mr-padding " asp-controller="Language" asp-action="List">
                                            <i data-feather="arrow-left" class="w-4 h-4"></i>
                                        </a>
                                    </span>
                                </div>
                                <div class="intro-y  col-span-6 ml-auto">

                                    <button type="submit" class="btn btn-primary w-24" onclick="LoadLoader()">Save</button>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>

        </div>

    </div>


</form>

