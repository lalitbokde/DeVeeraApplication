@model DeVeeraApp.ViewModels.Emotions.EmotionModel
@{
    ViewData["Title"] = "Create";
}

<form asp-controller="Emotion" asp-action="Create" method="post">
    <div class="intro-y inbox  py-10 sm:py-20 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg">Create Emotion</div>
            <div class="text-gray-600 text-center mt-2">Please add emotion</div>
        </div>


        <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="intro-y box p-5 col-span-12">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                        </div>
                    }
                    <div class="mt-5">
                        <label class="form-label text-theme-21 star">Emotion No</label>
                        <input asp-for="EmotionNo" type="number" class="form-control" placeholder="" />
                        <span asp-validation-for="EmotionNo" class="text-theme-6 mt-2"></span>

                    </div>
                    <div class="mt-5">
                        <label class="form-label text-theme-21 star">Emotion</label>
                        <input asp-for="EmotionName" type="text" min="0" class="form-control" placeholder="Emotion" />
                        <span asp-validation-for="EmotionName" class="text-theme-6 mt-2"></span>

                    </div>

                    <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                        <div class="grid grid-cols-12  gap-y-5 mt-5">
                            <div class="intro-y   col-span-6">
                                @*<a asp-controller="Video" asp-action="List" class="btn btn-primary w-24"> List</a>*@
                                <span class="btn btn-outline-secondary relative justify-end rounded-full h-10 w-32">
                                    Back to List
                                    <a asp-controller="Emotion" asp-action="List" class="w-8 h-8 absolute flex justify-center items-center bg-theme-17 dark:bg-theme-26 text-white rounded-full  top-0 bottom-0 my-auto pl-24 mr-padding ">
                                        <i data-feather="arrow-left" class="w-4 h-4"></i>
                                    </a>
                                </span>
                            </div>
                            <div class="intro-y  col-span-6 ml-auto">

                                <button type="submit" class="btn btn-primary w-24">Save</button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>


</form>

