@model DeVeeraApp.ViewModels.LevelModel
@using DeVeeraApp.ViewModels.Enum
@using DeVeeraApp.ViewModels.Images
@{
    ViewData["Title"] = "Create";
}

<form asp-controller="Level" asp-action="Create" method="post" id="levelform" onsubmit="ShowLoader('levelform');">
    <div class="intro-y inbox  py-10 sm:py-20 ">

        <div class="px-5 ">
            <div class="font-medium text-center text-lg">Create Level</div>
            <div class="text-gray-600 text-center mt-2">Please add Level name and description</div>
        </div>

        <div class="px-5 sm:px-20 pt-10 border-t border-gray-200 dark:border-dark-5">

            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="intro-y box p-5 col-span-12">
                    @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                    {
                        <div asp-validation-summary="All" class="text-theme-6 mt-4">
                        </div>
                    }
                <div class="mt-5">
                    <label for="input-wizard-1" class="form-label text-theme-21 star">Level No.</label>             
                    <input id="input-wizard-1" asp-for="@Model.LevelNo" type="number" class="form-control" placeholder="Level No.">
                    <span asp-validation-for="LevelNo" class="text-theme-6 mt-2"></span>
                </div>
                    <div class="mt-5">
                        <label for="input-wizard-1" class="form-label text-theme-21 star">Title</label>
                        <input id="input-wizard-1" asp-for="@Model.Title" type="text" class="form-control" placeholder="Title">
                        <span asp-validation-for="Title" class="text-theme-6 mt-2"></span>
                    </div>

                    <div class="mt-5">
                        <label for="input-wizard-1" class="form-label text-theme-21 star">Subtitle</label>
                        <input id="input-wizard-1" asp-for="@Model.Subtitle" type="text" class="form-control" placeholder="Subtitle">
                        <span asp-validation-for="Subtitle" class="text-theme-6 mt-2"></span>
                    </div>

                    <div class="mt-5">

                        <label class="form-label text-theme-21 ">Video</label>
                        <select asp-for="VideoId" asp-items="Model.AvailableVideo" type="text" data-search="true" class="tail-select w-full" placeholder="video name"></select>


                    </div>
                    <div class="mt-5">

                        <label class="form-label text-theme-21 ">Emotion</label>
                        @*<select asp-for="EmotionId" asp-items="Model.AvailableEmotions" type="text" data-search="true" class="tail-select w-full" placeholder="Emotion"></select>*@
                        @Html.ListBoxFor(m => m.SelectedEmotions, @Model.AvailableEmotions, new { @Id = "post-form-3", @class = "tail-select w-full", @placeholder = "Select Emotions" })

                    </div>
                    <div class="mt-5">
                        <div class="grid grid-cols-12 gap-5 mt-5 pt-5 border-t border-theme-31">
                            <div onclick="OpenImageSelectionModal('BannerImageId','BannerImageUrl')" data-toggle="modal" data-target="#superlarge-modal-size-preview" class="intro-y block col-span-12 sm:col-span-4 xxl:col-span-3">
                                <div class="box rounded-md p-3 relative zoom-in">
                                    <div class="flex-none pos-image relative block">
                                        <div class="pos-image__preview image-fit">
                                            <input asp-for="BannerImageId" hidden>
                                            <img id="BannerImageUrl" alt="Tinker Tailwind HTML Admin Template" src="~/dist/images/food-beverage-9.jpg">
                                        </div>
                                    </div>
                                    <div class="block font-medium text-center truncate mt-3">Banner</div>
                                </div>
                            </div>
                            <a onclick="OpenImageSelectionModal('VideoThumbImageId','VideoThumbImageUrl')" data-toggle="modal" data-target="#superlarge-modal-size-preview" class="intro-y block col-span-12 sm:col-span-4 xxl:col-span-3">
                                <div class="box rounded-md p-3 relative zoom-in">
                                    <div class="flex-none pos-image relative block">
                                        <div class="pos-image__preview image-fit">
                                            <input asp-for="VideoThumbImageId" hidden>
                                            <img alt="Tinker Tailwind HTML Admin Template" src="~/dist/images/food-beverage-19.jpg">
                                        </div>
                                    </div>
                                    <div class="block font-medium text-center truncate mt-3">Video Thumbnail</div>
                                </div>
                            </a>
                            <a onclick="OpenImageSelectionModal('ShareBackgroundImageId','ShareBackgroundImageUrl')" data-toggle="modal" data-target="#superlarge-modal-size-preview" class="intro-y block col-span-12 sm:col-span-4 xxl:col-span-3">
                                <div class="box rounded-md p-3 relative zoom-in">
                                    <div class="flex-none pos-image relative block">
                                        <div class="pos-image__preview image-fit">
                                            <input asp-for="ShareBackgroundImageId" hidden>
                                            <img alt="Tinker Tailwind HTML Admin Template" src="~/dist/images/food-beverage-5.jpg">
                                        </div>
                                    </div>
                                    <div class="block font-medium text-center truncate mt-3">Share Panel Background</div>
                                </div>
                            </a>
                        </div>

                    </div>

                    @*<div class="mt-3">
                            <label for="post-form-3" class="form-label text-theme-21">Images</label>
                            @Html.ListBoxFor(m => m.SelectedImg, @Model.AvailableImages, new { @Id = "post-form-3", @class = "tail-select w-full", @placeholder = "Select Images" })

                        </div>*@
                    <div class="mt-5">
                        <input asp-for="Active" type="checkbox" class="form-check-input" placeholder="IsActive" checked="checked" />
                        <label class="form-label text-theme-21 ml-2">Active</label>
                    </div>

                    <div class="mt-5">
                        <label for="input-wizard-1" class="form-label text-theme-21 ">Description</label>
                    </div>
                    <div class="" id="standard-editor">
                        <div class="preview">
                            <textarea id="editor2" asp-for="FullDescription" class="editor2"> </textarea>

                        </div>

                    </div>

                </div>

                <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end mt-5">
                    <button type="submit" class="btn btn-primary w-24">Save</button>
                </div>
            </div>

        </div>

    </div>
</form>

@await Component.InvokeAsync("ImageSelection")

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/dist/js/CustomJs/Delete.js"></script>
<script src="~/dist/js/Level.js"></script>

