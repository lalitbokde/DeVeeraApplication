<script type="text/javascript">

    function TranslateSpanishCreate() {

        var Title = document.getElementById('Createtitle').value;
        var Subtitle = document.getElementById('subtitlespanish').value;
        /*   var FullDescription = document.getElementById('editorEnglish').value;*/
        var FullDescription = CKEDITOR.instances.editorEnglish.getData();
        if (Title == null || Title == '') {
            document.getElementById("Titletag").innerHTML = "Please Enter Title.";
        }

        if (Subtitle == null || Subtitle == '') {
            document.getElementById("Subtitletag").innerHTML = "Please Enter Subtitle.";
        }
        if (FullDescription == null || FullDescription == '') {
            document.getElementById("FullDescriptiontag").innerHTML = "Please Enter Description.";
        }
        else if (Title != null || Title != '' && Subtitle != null || Subtitle != '' && FullDescription != null || FullDescription != '') {

            $.ajax({
                url: "/Admin/Level/TranslateSpanishCreate",
                type: "POST",
                data: { Title, Subtitle, FullDescription },

                success: function (data, status) {
                    $("#titleSpanish").val(data.title);
                    $(".subtitleenglish").val(data.subtitle);
                    CKEDITOR.instances['editorSpanish'].setData(data.fullDescription);
                },


            });
        }




    }

</script>
