@model DeVeeraApp.ViewModels.LevelModel
@{
    ViewData["Title"] = "List";
}
<style>
    .camelclass {
        text-transform: capitalize;
    }
</style>
@if (Model.LevelListPaged.Count() != 0)
{
    <div class="intro-y  py-5 sm:py-5  ">
        <div class="px-5 ">
            <div class="font-medium text-center text-lg"> Level List</div>
            <div class="text-gray-600 text-center mt-2 camelclass">Below are the list of levels.</div>
        </div>
       
        <div class="  border-t border-gray-200 dark:border-dark-5">
            <div class="mt-6 intro-y col-span-12">
                <div class="intro-y col-span-12 flex items-center justify-center sm:justify-end ">
                    <div class="grid grid-cols-12 gap-4 gap-y-5 ">
                        <div class="intro-y col-span-12 pr-5 text-right">
                            <a asp-controller="Level" asp-action="Create" class="btn btn-primary w-40"><i data-feather="file-plus" class="mr-2"></i>Create</a>

                        </div>


                    </div>
                </div>
            </div>

        </div>

    </div>
}
else
{
<div class="intro-y  py-10 sm:py-20 ">
    <div class="px-5 ">
        <div class="font-medium text-center text-lg"> There is no data to show</div>

    </div>
</div>
}
<!-- BEGIN: HTML Table Data -->
<div class="intro-y box p-5 mt-2">
    <div class="overflow-x-auto scrollbar-hidden">
        <div class="preview">
            <div class="overflow-x-auto">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">#</th>
                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Title</th>
                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Subtitle</th>
                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">VideoName</th>
                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Like</th>
                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">DisLike</th>
                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Edit</th>
                            <th class="border-b-2 dark:border-dark-5 whitespace-nowrap">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;
                            foreach (var item in Model.LevelListPaged)
                            {
                                                <tr>
                                                    <td class="border-b dark:border-dark-5">@item.LevelNo</td>
                                                    <td class="border-b dark:border-dark-5">@item.Title</td>
                                                    <td class="border-b dark:border-dark-5">@item.Subtitle</td>
                                                    <td class="border-b dark:border-dark-5">@item.VideoName</td>
                                                    <td class="border-b dark:border-dark-5">@(item.LikeId == null ? 0 : item.LikeId)</td>
                                                    <td class="border-b dark:border-dark-5">@(item.DisLikeId == null ? 0 : item.DisLikeId)</td>
                                                    <td class="border-b dark:border-dark-5 text-theme-10"><a asp-controller="Level" asp-action="Edit" asp-route-Id="@item.Id"><i data-feather="edit"></i></a></td>
                                                    <td class="border-b dark:border-dark-5 text-theme-24"><a onclick="ShowDeleteConfirmation('PostDeleteLevel(@item.Id)')"><i data-feather="trash-2"></i></a></td>
                                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- END: HTML Table Data -->

<script src="../../lib/jquery/jquery.min.js"></script>
<script type="text/javascript" src="https://unpkg.com/tabulator-tables@4.1.4/dist/js/tabulator.min.js"></script>
<script src="~/dist/js/Level.js"></script>
<script src="~/dist/js/CustomJs/Delete.js"></script>
